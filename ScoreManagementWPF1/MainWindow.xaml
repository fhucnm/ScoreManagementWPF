<Window x:Class="ScoreManagementWPF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScoreManagementWPF1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="30"
                Width="350" Height="320" HorizontalAlignment="Center" VerticalAlignment="Center"
                BorderBrush="#ddd" BorderThickness="1">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <TextBlock Text="Đăng nhập" FontSize="24" FontWeight="Bold" 
                           Foreground="#333" Margin="0,0,0,20" TextAlignment="Center"/>

                <!-- Username -->
                <TextBlock Text="Email đăng nhập:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="txtEmail" Margin="0,0,0,15" Padding="8"
                         Height="35" BorderBrush="#ccc" BorderThickness="1" Width="287"/>

                <!-- Password -->
                <TextBlock Text="Mật khẩu:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,20" Padding="8"
                             Height="30" BorderBrush="#ccc" BorderThickness="1"/>

                <!-- Login Button -->
                <Button Content="Đăng nhập" Height="35" Background="#007ACC"
                        Foreground="White" FontWeight="Bold"
                        Cursor="Hand" BorderThickness="0" 
                        Click="Login_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="5" Padding="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
